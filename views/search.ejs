<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CMS</title>
    <%- include('partials/includes-top') %>
  </head>
  <body>
    <div class="container">
      <h1 class="mb-4 text-center">Search</h1>
      <form action="/search" method="GET">
        <div class="form-group mb-2">
          <div class="text-center">
            <h1 class="mb-2"><label for="tag">Search by tag</label></h1>
          </div>
          <input
            type="text"
            name="tag"
            id="tag"
            class="form-control mt-1"
            required
          />
        </div>
        <div class="text-center mb-5">
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
      </form>
      <form action="/search" method="GET">
        <div class="form-group mb-2">
          <div class="text-center">
            <h1 class="mb-2"><label for="title">Search by title</label></h1>
          </div>
          <input
            type="text"
            name="title"
            id="title"
            class="form-control mt-1"
            required
          />
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary btn-lg">Submit</button>
        </div>
      </form>
    </div>
    <%- include('partials/includes-bottom') %>
  </body>
</html>
